<div
  class="rounded px-6 py-3 bg-blue-100 w-max mt-12 mx-auto border-2 border-black"
>
  <h1 class="text-center text-2xl font-bold">LOGIN</h1>
  <div class="mt-5 flex justify-center items-center">
    <form action="/session/login" method="POST" class="mb-2">
      <div class="mb-2 flex justify-between">
        <label
          for="title"
          class="form-label w-28 text-center rounded-sm border-2 border-black"
        >Email:</label>
        <input
          id="email"
          type="email"
          class="form-control bg-blue-100 border-b-2 border-blue-300 focus:outline-none focus:border-blue-400 ease-in-out"
          name="email"
          autocomplete="off"
          required
        />
      </div>
      <div class="mb-2 flex justify-between gap-3">
        <label
          for="title"
          class="form-label w-28 text-center rounded-sm border-2 border-black"
        >Password:</label>
        <input
          id="password"
          type="password"
          class="form-control bg-blue-100 border-b-2 border-blue-300 focus:outline-none focus:border-blue-400 ease-in-out"
          name="password"
          required
        />
      </div>
      <button
        type="submit"
        class="form-control text-lg mt-1 bg-blue-200 font-semibold rounded-sm border-2 border-black px-1 py-.5 w-full hover:bg-blue-50 active:bg-blue-200 transition-all duration-300"
      >Sign In</button>
    </form>
  </div>
  <div class="text-center">
    <p class="italic">Don't have an account?
      <a href="/register" class="font-semibold italic hover:underline">Sign Up!</a></p>
  </div>
</div>